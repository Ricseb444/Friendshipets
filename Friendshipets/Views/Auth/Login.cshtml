@model Friendshipets.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
}

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="login-card col-md-6 col-lg-5">
            <div class="card rounded-3 text-black shadow">
                <div class="card-body p-md-5 mx-md-4">
                    <div class="text-center mb-4">
                        <img src="~/Content/assets/Logo_Friendshipets.png" style="width: 160px;" alt="logo" />
                        <h4 class="mt-3">Bienvenido a Friendshipets</h4>
                    </div>

                    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                    {
                        <p class="text-center">Inicia sesión en tu cuenta</p>

                        <div class="form-outline mb-4">
                            @Html.TextBoxFor(m => m.CorreoUsuario, new { @class = "form-control", placeholder = "Correo electrónico" })
                        </div>

                        <div class="form-outline mb-4">
                            @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control", placeholder = "Contraseña" })
                        </div>

                        <div class="text-center pt-1 mb-4">
                            <button class="btn btn-primary w-100 gradient-custom-2 mb-3" type="submit">Iniciar Sesión</button>
                            @if (!string.IsNullOrEmpty(ViewBag.Mensaje as string))
                            {
                                <p class="text-danger mt-2">@ViewBag.Mensaje</p>
                            }
                        </div>

                        <div class="text-center">
                            <p class="mb-1">¿No tienes cuenta?</p>
                            <a class="btn btn-outline-primary" href="@Url.Action("Registro", "Auth")">Registrarse</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Raw(@"
<style>
    .gradient-custom-2 {
        background: linear-gradient(to right, #00c6ff, #0072ff);
        border: none;
        color: white;
    }

    .form-outline .form-control {
        border: 1px solid #ccc;
        border-radius: 0.25rem;
    }

    .login-card {
    margin-left: 60px; /* Ajustá según el logo */
    }


    @media (max-width: 768px) {
        .login-card {
            margin-left: 0;
        }
    }
</style>
")
