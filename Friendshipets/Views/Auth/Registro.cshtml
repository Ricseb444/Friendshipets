@model Friendshipets.Models.ViewModels.RegistroViewModel
@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
}

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="registro-card col-md-6 col-lg-5">
            <div class="card rounded-3 text-black shadow">
                <div class="card-body p-md-5 mx-md-4">
                    <div class="text-center mb-4">
                        <img src="~/Content/assets/Logo_Friendshipets.png" style="width: 160px;" alt="logo" />
                        <h4 class="mt-3">Crear cuenta en Friendshipets</h4>
                    </div>

                    @using (Html.BeginForm("Registro", "Auth", FormMethod.Post))
                    {
                        <p class="text-center">Completa los siguientes datos</p>

                        <!-- Cliente -->
                        <div class="form-outline mb-3">
                            @Html.TextBoxFor(m => m.DNI_Cliente, new { @class = "form-control", placeholder = "DNI" })
                            @Html.ValidationMessageFor(m => m.DNI_Cliente, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-outline mb-3">
                            @Html.TextBoxFor(m => m.NombreCliente, new { @class = "form-control", placeholder = "Nombre" })
                            @Html.ValidationMessageFor(m => m.NombreCliente, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-outline mb-3">
                            @Html.TextBoxFor(m => m.ApellidosCliente, new { @class = "form-control", placeholder = "Apellidos" })
                            @Html.ValidationMessageFor(m => m.ApellidosCliente, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-outline mb-3">
                            @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control", placeholder = "Dirección" })
                            @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
                        </div>

                        <!-- Usuario -->
                        <div class="form-outline mb-3">
                            @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control", placeholder = "Nombre de usuario" })
                            @Html.ValidationMessageFor(m => m.NombreUsuario, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-outline mb-3">
                            @Html.TextBoxFor(m => m.CorreoUsuario, new { @class = "form-control", placeholder = "Correo electrónico" })
                            @Html.ValidationMessageFor(m => m.CorreoUsuario, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-outline mb-3">
                            @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control", placeholder = "Contraseña" })
                            @Html.ValidationMessageFor(m => m.Contrasena, "", new { @class = "text-danger" })
                        </div>

                        <div class="text-center pt-1 mb-4">
                            <button class="btn btn-primary w-100 gradient-custom-2 mb-3" type="submit">Registrarse</button>
                            @if (!string.IsNullOrEmpty(ViewBag.Mensaje as string))
                            {
                                <p class="text-danger mt-2">@ViewBag.Mensaje</p>
                            }
                        </div>

                        <div class="text-center">
                            <p class="mb-1">¿Ya tienes cuenta?</p>
                            <a class="btn btn-outline-primary" href="@Url.Action("Login", "Auth")">Iniciar Sesión</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Raw(@"
<style>
    .gradient-custom-2 {
        background: linear-gradient(to right, #00c6ff, #0072ff);
        border: none;
        color: white;
    }

    .form-outline .form-control {
        border: 1px solid #ccc;
        border-radius: 0.25rem;
    }

    .registro-card {
        margin-left: 60px;
    }

    @media (max-width: 768px) {
        .registro-card {
            margin-left: 0;
        }
    }
</style>
")

