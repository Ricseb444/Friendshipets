@{
    ViewBag.Title = "Catalogo";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
}

<main>
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var producto in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Imagen del producto -->
                            @if (!string.IsNullOrEmpty(producto.ImgProducto))
                            {
                                <img class="card-img-top" src="@Url.Content(producto.ImgProducto)" alt="@producto.NombreProducto" />
                            }
                            else
                            {
                                <img class="card-img-top" src="~/Content/Images/Default.jpeg" alt="Imagen no disponible" />
                            }

                            <!-- Detalles del producto -->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">@producto.NombreProducto</h5>
                                    ₡@producto.Precio
                                </div>
                            </div>

                            <!-- Acciones del producto -->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <form action="@Url.Action("AgregarProducto", "Catalogo")" method="post">
                                        <input type="hidden" name="idProducto" value="@producto.IDProducto" />
                                        <input type="hidden" name="cantidad" value="1" />
                                        <button type="submit" class="btn btn-outline-dark mt-auto">Agregar al carrito</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
    </section>
    

</main>

