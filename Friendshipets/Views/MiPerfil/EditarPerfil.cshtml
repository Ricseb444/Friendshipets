@model Friendshipets.Models.ViewModels.MiPerfilViewModel
@{
    ViewBag.Title = "Editar Perfil";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
}

<div class="container my-5 py-5">
    <div class="card mx-auto shadow" style="max-width: 650px; border-radius: 20px;">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Editar Perfil</h4>

            @using (Html.BeginForm("EditarPerfil", "MiPerfil", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.IDCliente)
                @Html.HiddenFor(m => m.DNI_Cliente)
                @Html.HiddenFor(m => m.CorreoUsuario) <!-- para mantenerlo visible solo en la vista -->

                <div class="mb-3">
                    <label class="form-label">Nombre de Usuario</label>
                    @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control", required = "required" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    @Html.TextBoxFor(m => m.NombreCliente, new { @class = "form-control", required = "required" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Apellidos</label>
                    @Html.TextBoxFor(m => m.ApellidosCliente, new { @class = "form-control", required = "required" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Dirección</label>
                    @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control", required = "required" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Cédula (no editable)</label>
                    <input class="form-control" value="@Model.DNI_Cliente" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label">Correo (no editable)</label>
                    <input class="form-control" value="@Model.CorreoUsuario" readonly />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "MiPerfil")" class="btn btn-success">Volver</a>

                    <div>
                        <a href="@Url.Action("CambiarContrasena", "MiPerfil")" class="btn btn-warning me-2">
                            <i class="bi bi-shield-lock-fill"></i> Cambiar Contraseña
                        </a>
                        <button type="submit" class="btn btn-primary">Actualizar</button>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

