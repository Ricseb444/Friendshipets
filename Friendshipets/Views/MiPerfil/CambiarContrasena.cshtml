@model Friendshipets.Models.ViewModels.CambiarContrasenaViewModel
@{
    ViewBag.Title = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
}

<div class="container my-5 py-4" style="max-width: 500px;">
    <div class="card shadow">
        <div class="card-body">
            <h4 class="text-center mb-4">Cambiar Contraseña</h4>

            @using (Html.BeginForm())
            {
                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label">Contraseña Actual</label>
                    @Html.PasswordFor(m => m.ContrasenaActual, new { @class = "form-control", required = "required" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Nueva Contraseña</label>
                    @Html.PasswordFor(m => m.NuevaContrasena, new { @class = "form-control", required = "required" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Repetir Nueva Contraseña</label>
                    @Html.PasswordFor(m => m.ConfirmarContrasena, new { @class = "form-control", required = "required" })
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "MiPerfil")" class="btn btn-secondary">Volver</a>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            }
        </div>
    </div>
</div>

