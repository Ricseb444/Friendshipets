@{
    ViewBag.Title = "Home Page";

    Layout = "~/Views/Shared/_Layout.cshtml"; 
}




<main class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">Administración</h1>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-3 justify-content-center">

        <div class="col">
            <div class="card text-white bg-warning shadow-lg border-0 h-100 text-center">
                <div class="card-body d-flex flex-column">
                    <i class="fas fa-id-card fa-3x mb-3"></i>
                    <h5 class="card-title fw-bold">Clientes</h5>
                    <p class="card-text flex-grow-1">Gestiona la información de los clientes.</p>
                    <a href="@Url.Action("Index", "Clientes")" class="btn btn-light text-warning fw-bold mt-auto">
                        <i class="fas fa-arrow-right"></i> Ir a Clientes
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-primary shadow-lg border-0 h-100 text-center">
                <div class="card-body d-flex flex-column">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h5 class="card-title fw-bold">Usuarios</h5>
                    <p class="card-text flex-grow-1">Gestiona la información de los usuarios.</p>
                    <a href="@Url.Action("Index", "Usuarios")" class="btn btn-light text-primary fw-bold mt-auto">
                        <i class="fas fa-arrow-right"></i> Ir a Usuarios
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-success shadow-lg border-0 h-100 text-center">
                <div class="card-body d-flex flex-column">
                    <i class="fas fa-truck fa-3x mb-3"></i>
                    <h5 class="card-title fw-bold">Proveedores</h5>
                    <p class="card-text flex-grow-1">Gestiona los proveedores de la tienda.</p>
                    <a href="@Url.Action("Index", "Proveedores")" class="btn btn-light text-success fw-bold mt-auto">
                        <i class="fas fa-arrow-right"></i> Ir a Proveedores
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-danger shadow-lg border-0 h-100 text-center">
                <div class="card-body d-flex flex-column">
                    <i class="fas fa-box-open fa-3x mb-3"></i>
                    <h5 class="card-title fw-bold">Productos</h5>
                    <p class="card-text flex-grow-1">Administra el catálogo de productos.</p>
                    <a href="@Url.Action("Index", "Productos")" class="btn btn-light text-danger fw-bold mt-auto">
                        <i class="fas fa-arrow-right"></i> Ir a Productos
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-info shadow-lg border-0 h-100 text-center">
                <div class="card-body d-flex flex-column">
                    <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                    <h5 class="card-title fw-bold">Carritos</h5>
                    <p class="card-text flex-grow-1">Administra los carritos de los clientes.</p>
                    <a href="@Url.Action("Index", "Carrito")" class="btn btn-light text-info fw-bold mt-auto">
                        <i class="fas fa-arrow-right"></i> Ir a Carritos
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-secondary shadow-lg border-0 h-100 text-center">
                <div class="card-body d-flex flex-column">
                    <i class="fas fa-credit-card fa-3x mb-3"></i>
                    <h5 class="card-title fw-bold">Facturación</h5>
                    <p class="card-text flex-grow-1">Gestiona las ventas de la tienda.</p>
                    <a href="@Url.Action("Index", "Facturacion")" class="btn btn-light text-secondary fw-bold mt-auto">
                        <i class="fas fa-arrow-right"></i> Ir a Facturación
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>
