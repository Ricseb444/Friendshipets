@model Friendshipets.Models.ViewModels.createFactura
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <ol class="breadcrumb mb-4 mt-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Facturacion")">Facturas</a></li>
        <li class="breadcrumb-item active">Crear</li>
    </ol>

    @if (ViewBag.ValorMensaje != null)
    {
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title"><i class="bi bi-info-circle"></i> Mensaje</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @if (ViewBag.ValorMensaje == 1)
                        {
                            <div class="alert alert-success">@ViewBag.MensajeProceso</div>
                        }
                        else
                        {
                            <div class="alert alert-danger">@ViewBag.MensajeProceso</div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    }

    @using (Html.BeginForm("Create", "Facturacion", FormMethod.Post))
    {
        <div class="card shadow-lg">
            <div class="card-header">
                <i class="fas fa-plus-circle me-1"></i> Agregar Factura
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 d-flex flex-column align-self-start">
                        <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">
                            Agregar Factura
                        </button>
                        <button type="button" class="btn btn-success w-100 btn-lg" onclick="document.location.href = '@Url.Content("~/Facturacion/Index")'">
                            Volver
                        </button>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group row mb-3">
                            <label class="col-md-4 col-form-label text-md-right">
                                @Html.LabelFor(u => u.DNI_Cliente):
                            </label>
                            <div class="col-md-8 input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                @Html.TextBoxFor(u => u.DNI_Cliente, new { @class = "form-control", @placeholder = "Ingrese DNI", autocomplete = "off" })
                            </div>
                            <small class="text-danger">@Html.ValidationMessage("DNI_Cliente")</small>
                        </div>

                        <div class="form-group row mb-3">
                            <label class="col-md-4 col-form-label text-md-right">
                                @Html.LabelFor(u => u.IDProducto):
                            </label>
                            <div class="col-md-8 input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                @Html.TextBoxFor(u => u.IDProducto, new { @class = "form-control", @placeholder = "Ingrese ID Producto", autocomplete = "off" })
                            </div>
                            <small class="text-danger">@Html.ValidationMessage("IDProducto")</small>
                        </div>

                        <div class="form-group row mb-3">
                            <label class="col-md-4 col-form-label text-md-right">
                                @Html.LabelFor(u => u.Cantidad):
                            </label>
                            <div class="col-md-8 input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                @Html.TextBoxFor(u => u.Cantidad, new { @class = "form-control", @placeholder = "Ingrese la cantidad", autocomplete = "off" })
                            </div>
                            <small class="text-danger">@Html.ValidationMessage("Cantidad")</small>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myModal').modal({ backdrop: 'static', keyboard: false }).modal('show');
        });
    </script>
}

